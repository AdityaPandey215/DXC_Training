<script>

function validate()
{
    
    var b=document.getElementById("uid").value
  if(b.length<5 || b.length>12)
  {
      document.getElementById("uidd").innerHTML="* Enter characters between 5 to 12"
  }
  
var c=document.getElementById("password").value

if(c.length<5 || c.length>12)
  {
      document.getElementById("spass").innerHTML="* Enter password between 5 to 12"
  }
  var d=document.getElementById("valipass").value

if(c!=d)
{
    document.getElementById("sval").innerHTML="Entered password not matches"
}


var dff1=document.getElementById("defaultInline1")
var dff2=document.getElementById("defaultInline2")

if(defaultInline1.checked==false && defaultInline2.checked==false)
{
document.getElementById("ssex").innerHTML="please choose sex"
}

var dobb=document.getElementById("dob").value

  var dobbb=dobb.split('-');
  var datee=new Date()
  datee=datee.getFullYear();
  
  if(dobb=="")
  {
    document.getElementById("sdob").innerHTML="* Please enter Date of birth"
  }
 
   else if(datee-dobbb[0]<18)
   {
    
    document.getElementById("sdob").innerHTML="* you are below 18"
   } 
  


  var co=document.getElementById("country").value
 
if(co=="Please select country")
{
 document.getElementById("con").innerHTML="* Please select Country"
}

if(document.getElementById("name1").value=="")
{
    document.getElementById("namee").innerHTML="* Name is required";
}
else{
   var lenn=document.getElementById("name1").value;
   for(i=0;i<lenn.length;i++)
   {
      for(j=0;j<=9;j++)
      {
          if(lenn[i]==j)
          {
            document.getElementById("namee").innerHTML="* Name should contain only alphabets"
          }
      }
   }
}
var z=document.getElementById("zip").value;
 if(z.length==0)
{
    document.getElementById("zipp").innerHTML="* Zip code is required"
}
else if(z.length<7)
{
    for(i=0;i<z.length;i++)
   {
      for(j=0;j<=9;j++)
      {
          if(Number(z[i])!=Number(j))
          {
            document.getElementById("zipp").innerHTML="* Zip code should contain only numbers"
          }
      }
   }
}
var emm=document.getElementById("emaill").value;
if(emm.length==0)
{
    document.getElementById("ema").innerHTML="E-mail is required"
}
else{
    var flag=0;
    for(i=0;i<emm.length;i++)
    {
        if(emm[i]=='@')
        {
            flag=1
            break;
        }
    }
    if(flag==0)
    {
    document.getElementById("ema").innerHTML="E-mail format is wrong"
}
}
}

    
 $('#FormGroup').mouseenter(function(){
 $('#FormGroup').css("background-color","yellow")

 });
$('#FormGroup').mouseleave(function(){
    $('#FormGroup').css("background-color","lightcyan")
});
</script>
